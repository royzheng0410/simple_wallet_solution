<div class='container'>
  <h3>User Account</h3>
  <div class='row col-lg-12 m-0 p-0'>
    <table class="table">
      <tbody>
        <tr>
          <th>Account Number</th>
          <td><%= @user_account.account_number %></td>
        </tr>
        <tr>
          <th>First Name</th>
          <td><%= @user_account.first_name %></td>
        </tr>
        <tr>
          <th>Last Name</th>
          <td><%= @user_account.last_name %></td>
        </tr>
        <tr>
          <th>Current Balance</th>
          <td><%= @user_account.balance %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= link_to 'Show all', user_accounts_path, class: 'btn btn-primary'%>
  <%= link_to 'Transaction History', transactions_path(account_id: @user_account.id), class: 'btn btn-primary' %>
  <%= link_to 'Request Transaction', new_transaction_path(sender_id: @user_account.id), class: 'btn btn-outline-primary'%>
</div>