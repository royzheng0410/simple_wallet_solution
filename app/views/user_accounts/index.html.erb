<div class='container'>
  <h3>User Accounts</h3>
  <div class='row col-lg-12 m-0 p-0'>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Account Number</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Balance</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @user_accounts.present? %>
          <% @user_accounts.each do |user_account| %>
            <tr>
              <td><%= user_account.account_number %></td>
              <td><%= user_account.first_name %></td>
              <td><%= user_account.last_name %></td>
              <td><%= user_account.balance %></td>
              <td>
                <%= link_to 'Detail', user_account_path(user_account), class: 'btn btn-primary'%>
                <%= link_to 'Request Transaction', new_transaction_path(account_id: user_account.id), class: 'btn btn-outline-primary'%>
              </td>
            </tr>
          <% end %>
        <% else %>
          <td>No records</td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>