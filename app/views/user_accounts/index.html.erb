<div class='container'>
  <h3>User Accounts</h3>
  <div class='row col-lg-12 m-0 p-0'>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Account Number</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Balance</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @user_accounts.each do |user_account| %>
          <tr>
            <td><%= user_account.account_number %></td>
            <td><%= user_account.first_name %></td>
            <td><%= user_account.last_name %></td>
            <td><%= user_account.wallet.balance %></td>
            <td>
              <%= link_to 'Show', user_account_path(user_account), class: 'btn btn-primary'%>
              <%= link_to 'Transfer', '#', class: 'btn btn-outline-primary'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>